grisFondo = #E8E8E8
azul = #22BCE0
tamanoLetra = 16px
tamanoTitulos = 18px
naranja = #DD4F24
azulMensaje= #E0F8F7
amarilloMensaje = #F7F8E0
azulIngreso= #0072C6
amarilloFavorito = #FBFBEF

@font-face {
	font-family: "Flaticon";
	src: url("../font/flaticon.eot");
	src: url("../font/flaticon.eot#iefix") format("embedded-opentype"),
	url("../font/flaticon.woff") format("woff"),
	url("../font/flaticon.ttf") format("truetype"),
	url("../font/flaticon.svg") format("svg");
	font-weight: normal;
	font-style: normal;
}

body
	background grisFondo
	font-family Arial
	font-size tamanoLetra	
	height 300px
	footer
		background naranja
		color white
		text-align center
		padding 0.8em  0
		margin-top: 3em
		position absolute
		top 600px
		width 1450px
		
		h3
			font-size 14px
			font-weight normal	
	
	header 
		background azulOscuro
		color white	
		overflow hidden
		position relative	
		
		.header-log				
			float left
			padding 1em
			width 100px			
			
			img
				border-right 1px solid white
				heigth 70px
				padding 0.8em 
				width 80px
				
		.header-titulo
			font-size 16px
			margin 50px 0  0 200px

			
		.header-avatar
			position absolute
			right 30px
			top 1px		
			
			img
				border-radius 60%
				width 70px
	nav
		background azul
		border-left 20px solid white
		
		.menu-ppal
			height 40px
			line-height 40px
			margin 0
			padding 0
			
			li
				display inline-block
				
				a
					color white
					display inline-block					
					padding 0 1em
					text-decoration none					
					
					&:hover
						background rgba(black, 0.1)						
	section		
	.ingreso
		margin 0 auto
		position relative			
		top 100px
		border-style solid
		width 495px
		border-width 2px
		border-color azul
		background white
		height 218px
		.boton
			width 90%			
			background white
			button	
				background white		
				border-width 2px
				border-color azul
				border-style solid
			
		 
	
		


 		

		
			
				
			
			
	    
		    

	

